{
  "manifest_version": 3,
  "name": "Ally Humai Collector",
  "version": "1.0.1",
  "description": "Recolecta perfiles de LinkedIn y env√≠a candidatos al bridge local de Ally Humai.",
  "icons": {
    "16": "icon/descarga.png",
    "32": "icon/descarga.png",
    "48": "icon/descarga.png",
    "128": "icon/descarga.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "http://localhost:8000/*",
    "https://preview--allyhirework.lovable.app/*",
    "https://allyhire.work/*"
  ],
  "action": {
    "default_title": "Ally Humai Collector",
    "default_icon": {
      "16": "icon/descarga.png",
      "32": "icon/descarga.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": [
        "content-script-linkedin.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://preview--allyhirework.lovable.app/*",
        "https://allyhire.work/*"
      ],
      "js": [
        "content-script-lovable.js"
      ]
    }
  ]
}